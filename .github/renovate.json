{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "automerge": true,
  "forkProcessing": "enabled",
  "includeForks": true,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "assignees": ["c0rrre"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Regeln für GitHub Actions (Ihre Workflows)",
      "matchManagers": [
        "github-actions"
      ],
      "prConcurrentLimit": 99,
      "commitMessagePrefix": "[github-action] ",
      "reviewers": [
        "c0rrre"
      ]
    },
    {
      "description": "Regeln für Dockerfiles (falls Sie den Server self-hosten)",
      "matchManagers": [
        "dockerfile"
      ],
      "prConcurrentLimit": 10,
      "commitMessagePrefix": "[docker] ",
      "reviewers": [
        "c0rrre"
      ]
    },
    {
      "description": "Regeln für Rust (Cargo) - Das Herz von RustDesk",
      "matchManagers": [
        "cargo"
      ],
      "commitMessagePrefix": "[rust] ",
      "reviewers": [
        "c0rrre"
      ]
    },
    {
      "description": "Regeln für Flutter/Dart (Pub) - Die Oberfläche",
      "matchManagers": [
        "pub"
      ],
      "commitMessagePrefix": "[flutter] ",
      "reviewers": [
        "c0rrre"
      ],
      "ignoreDeps": ["flutter_rust_bridge"] 
    }
  ]
}
